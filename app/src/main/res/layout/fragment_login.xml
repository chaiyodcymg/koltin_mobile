<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAAC9B"
    android:gravity="center"
    tools:context=".LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAT CARE"
        android:layout_marginBottom="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="168dp"
        android:layout_height="137dp"
        android:src="@drawable/paw"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_layout"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/email"
            android:hint="อีเมล"
            android:layout_toRightOf="@+id/userlogin"
            android:background="@drawable/radius_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="17dp"/>
        <ImageView
            android:id="@+id/userlogin"
            android:layout_width="25.7dp"
            android:layout_height="20.3dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/userlogin" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_layout"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp">

        <EditText
            android:hint="รหัสผ่าน"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/radius_layout"
            android:textSize="20sp"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="17dp"
            android:layout_marginStart="30dp"/>
        <ImageView
            android:id="@+id/lock"
            android:layout_width="25.7dp"
            android:layout_height="20.3dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lock" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="เข้าสู่ระบบ"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/radius2_layout"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/notregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยังไม่มีบัญชี?"
        android:layout_marginTop="100dp"
        android:textColor="#545959"/>
    <TextView
        android:layout_toRightOf="@+id/notregis"
        android:id="@+id/change_to_regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="สมัครสมาชิก"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="96dp"
        android:textSize="18dp"
        android:textColor="#FBF8F8"/>
</RelativeLayout>
</LinearLayout>