<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".AddCatFindhouse"
        android:background="#DCD9D9"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp">

            <TextView
                android:id="@+id/addpostinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="น้องเหมียวหาบ้าน"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namecat"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/addpostinfo"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="ชื่อแมว">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/rela"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_below="@+id/namecat"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="เพศ :"
                android:textSize="20sp" />


            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_below="@+id/namecat"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/rela"
                android:background="@drawable/round"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ผู้"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatRadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เมีย"
                    android:textSize="18sp" />

            </RadioGroup>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/colorcat"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/gender"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="สี">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/vacine"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/colorcat"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="วัคซีนที่เคยได้รับ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtVacine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="128dp"
                android:layout_height="55dp"
                android:layout_below="@+id/vacine"
                android:layout_gravity="center"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                card_view:cardBackgroundColor="#B8B5B5"
                card_view:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/datevac"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="วันที่ได้รับวัคซีน :"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                android:layout_width="215dp"
                android:layout_height="55dp"
                android:layout_below="@+id/vacine"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/card_view"
                android:background="@drawable/round"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:text="dd/mm/yy"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/select_vaccine_date"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/vacine"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/card_view"
                android:src="@drawable/calendar" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/species"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/date"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="สายพันธ์">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSpecies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/more"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_below="@+id/species"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="รายละเอียดเพิ่มเติม">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMore"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/more"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:text="รูปภาพ"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_selected"
                android:layout_width="190dp"
                android:layout_height="200dp"
                android:layout_below="@+id/textimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/home" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_image_upload"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_selected"
                android:layout_centerHorizontal="true"
                android:text="อัปโหลดรูปภาพ" />

            <TextView
                android:id="@+id/textplacedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_image_upload"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:text="สถานที่"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/place"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textplacedate"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="เลขที่">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/street"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/place"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="ถนน">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/town"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/street"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="ตำบล">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/district"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/town"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="เขต/อำเภอ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/province"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/district"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="จังหวัด">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/postcode"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/province"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="รหัสไปรษณีย์">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPostcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postcode"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:text="ข้อมูลการติดต่อ"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameperson"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textcontact"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="ชื่อ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNameperson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastnameperson"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/nameperson"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="นามสกุล">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLastnameperson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/lastnameperson"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="เบอร์ติดต่อ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/phone"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="อีเมล">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lineid"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/email"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="line ID">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLineid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/facebook"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@+id/lineid"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:hint="facebook">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_post"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/facebook"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                card_view:cardBackgroundColor="#DF7861"
                card_view:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="เสร็จสิ้น"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>