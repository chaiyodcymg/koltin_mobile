<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@color/grey"
    tools:context=".ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_anchorGravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="CAT \nCARE"
            android:textColor="@color/white"
            android:fontFamily="@font/mipie"
            android:textSize="35dp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="245dp"
            android:layout_height="93dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/catpaw"
            android:translationX="70dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_selected"
                android:layout_marginTop="50dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                app:civ_border_color="#FF000000"/>
            <!--            <androidx.appcompat.widget.AppCompatImageView-->
            <!--                android:id="@+id/image_selected"-->
            <!--                android:layout_width="200dp"-->
            <!--                android:layout_height="200dp"-->
            <!--                android:src="@drawable/user_black"-->
            <!--                />-->
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:hint="อีเมล:"
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="18sp"/>
            <TextView
                android:textColor="@color/black"
                android:hint="ชื่อ:"
                android:id="@+id/firstname"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="18sp"/>
            <TextView
                android:textColor="@color/black"
                android:hint="นามสกุล:"
                android:id="@+id/lastname"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textSize="18sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_change_to_edit"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#2B2828"
                android:text="แก้ไขข้อมูลโปรไฟล์"
                android:background="@drawable/radius_layout"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/radius3_layout"
                android:text="ออกจากระบบ" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>