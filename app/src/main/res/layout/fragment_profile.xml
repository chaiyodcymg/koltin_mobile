<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/grad">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_selected"
            android:layout_marginTop="50dp"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/grad"
            app:civ_border_color="#FF000000"/>
        <!--            <androidx.appcompat.widget.AppCompatImageView-->
        <!--                android:id="@+id/image_selected"-->
        <!--                android:layout_width="200dp"-->
        <!--                android:layout_height="200dp"-->
        <!--                android:src="@drawable/user_black"-->
        <!--                />-->
        <TextView
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:hint="อีเมล:"
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="22sp"/>
        <TextView
            android:textColor="@color/black"
            android:hint="ชื่อ:"
            android:id="@+id/firstname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="22sp"/>
        <TextView
            android:textColor="@color/black"
            android:hint="นามสกุล:"
            android:id="@+id/lastname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="22sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change_to_edit"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#2B2828"
            android:text="แก้ไขข้อมูลโปรไฟล์"
            android:background="@drawable/radius_layout"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            android:id="@+id/btnLogout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius3_layout"
            android:text="ออกจากระบบ" />
    </LinearLayout>


</LinearLayout>